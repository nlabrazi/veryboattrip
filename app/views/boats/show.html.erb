<div class="card-trip pt-4">
  <%= cl_image_tag @boat.photos[0].key, height: 300, width: 400, crop: :fill %>
  <div class="card-trip-infos">
    <div>
      <h2><%= @boat.name %></h2>
    </div>
    <h3 class="card-trip-pricing">Taille du bateau : <%= @boat.size %> meters</h3>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
  </div>
  <div class="container text-center">
    <h2>Description :</h2>
    <div>
      <p><%= @boat.description %></p>
    </div>
  </div>
  <br>
  <br>
  <br>

  <div class="row mt-4">
    <div id="map" class="container-map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<% ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

</div>
