<div class="container pt-5">
  <div class="text-underline text-center ">
    <h1>
      BOAT moi le cul!
    </h1>
    <img src="https://img.gta5-mods.com/q95/images/gta-vice-city-loading-screens/43986c-gta-vice-city-sonny-forelli-grand-theft-auto-1920x1200-wallpaper429131.jpg" alt="Incoming" height = "300" width = "550" >
  </div>
</div>
  <div class="row mb-5 mt-5">
    <% @boats.each do | boat | %>
    <% if boat.photo.attached? %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to user_boat_path(@boat), class: "card-link" do%>
      <div class="card m-4"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category p-5">
          <h2> <%= boat.name  %> </h2>
        </div>
      </div>
    </div>
      <% end %>
    <% end %>
    <% end %>
  </div>

<div class="container">
  <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
      <div class="card card-inverse card-info">
          <img class="card-img-top" src="https://picsum.photos/200/150/?random">
          <div class="card-block">
              <figure class="profile">
                  <img src="https://picsum.photos/200/150/?random" class="profile-avatar" alt="">
              </figure>
              <h4 class="card-title mt-3">Gros Yacht pour grosse TEUF</h4>
              <div class="meta card-text">
                  <a>Putes & Coke</a>
              </div>
              <div class="card-text">
                  Méga délire sur ce yacht de 120m.
              </div>
          </div>
          <div class="card-footer">
              <small>Last updated 3 mins ago</small>
              <button class="btn btn-info float-right btn-sm">Deal</button>
          </div>
      </div>
  </div>
</div>


