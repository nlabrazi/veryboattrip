<!-- BEGIN CARDS -->
          <div class="p-3">
          <h2 class="text-center">Latest Products</h2>
          </div>

        <section class="block first pb-5" >

          <div class="card-deck" id="product">
            <% @boats.each do |boat| %>
            <% if boat.photos.attached? %>
            <div class="card">
            <%= link_to boat_path(boat) do %>
            <%= cl_image_tag boat.photos[0].key, height: 200, crop: :fill, class:"card-img-top" %>
            <% end %>
              <div class="card-body">

                <h5 class="card-title"> <%= boat.name  %> </h5>
                <p class="card-text"><%= boat.description %></p>
              </div>
              <div class="card-footer">
              <small class="text-muted">Last updated 3 mins ago</small>
              </div>

            </div>
        <% end %>
        <% end %>
          </div>

        </section>


<!-- END CARDS -->
